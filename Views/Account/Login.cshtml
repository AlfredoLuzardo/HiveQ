@model dynamic

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Login to QueueSystem</h1>
        <p class="lead">Access your account to manage your queues</p>

        <div class="card mt-4">
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-2">Don't have an account?</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">Register as Customer</a>
                        <a asp-controller="Company" asp-action="Register" class="btn btn-outline-success">Register as Company</a>
                    </div>

                    <div class="text-center mt-3">
                        <a href="#" class="text-muted small">Forgot your password?</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-4">
            <strong>Demo Account (For Testing):</strong><br />
            Email: demo@example.com<br />
            Password: demo123
        </div>
    </div>
</div>
