@model dynamic

@{
    ViewData["Title"] = "Queue Details";
}

<div class="row">
    <div class="col-md-8">
        <h1>Joe's Pizza - Main Dining Queue</h1>
        <p class="lead">Best pizza in town!</p>
        
        <div class="card mt-4">
            <div class="card-header">
                <h4>Queue Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Company:</strong> Joe's Pizza</p>
                        <p><strong>Category:</strong> Restaurant</p>
                        <p><strong>Address:</strong> 123 Main Street</p>
                        <p><strong>Phone:</strong> (555) 123-4567</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Queue Status:</strong> <span class="badge bg-success">Open</span></p>
                        <p><strong>People in Queue:</strong> 12</p>
                        <p><strong>Estimated Wait Time:</strong> 45 minutes</p>
                        <p><strong>Avg. Time per Person:</strong> 5 minutes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5>Join This Queue</h5>
                <p>Enter your contact information to join the queue remotely. You'll receive notifications about your position.</p>
                
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number (Optional)</label>
                        <input type="tel" class="form-control" id="phone" name="phone" />
                    </div>
                    <div class="mb-3">
                        <label for="partySize" class="form-label">Party Size</label>
                        <select class="form-select" id="partySize" name="partySize">
                            <option value="1">1 Person</option>
                            <option value="2" selected>2 People</option>
                            <option value="3">3 People</option>
                            <option value="4">4 People</option>
                            <option value="5">5+ People</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">Join Queue</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Current Wait Times</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Current:</span>
                    <strong>45 min</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Average Today:</span>
                    <strong>38 min</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Peak Time:</span>
                    <strong>6:00 PM</strong>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>About This Location</h5>
            </div>
            <div class="card-body">
                <p class="small">Serving delicious pizza since 1995. Join our queue to skip the wait!</p>
                <hr />
                <p class="small text-muted mb-1"><strong>Hours:</strong></p>
                <p class="small text-muted">Mon-Sun: 11:00 AM - 10:00 PM</p>
            </div>
        </div>
    </div>
</div>
