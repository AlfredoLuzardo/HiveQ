@model HiveQ.Models.Queue

@{
    ViewData["Title"] = "Queue Details";
    var currentSize = ViewBag.CurrentQueueSize;
    var estimatedWait = ViewBag.EstimatedWaitMinutes;
    var qrCodeData = ViewBag.QRCodeData;
    var isFull = currentSize >= Model.MaxCapacity;
    var joinUrl = $"/JoinQueue?code={qrCodeData}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Search</a></li>
                    <li class="breadcrumb-item"><a asp-action="Results" asp-route-searchQuery="@ViewBag.SearchQuery">Results</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Queue Details</li>
                </ol>
            </nav>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Main Queue Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="bi bi-list-ul"></i> @Model.QueueName
                        </h3>
                        <span class="badge bg-light text-dark">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle"></i> @Model.Description
                        </div>
                    }

                    <!-- Queue Statistics -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-3 col-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                                    <h4 class="mt-2 mb-0">@currentSize</h4>
                                    <small class="text-muted">People Waiting</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="bi bi-clock text-warning" style="font-size: 2rem;"></i>
                                    <h4 class="mt-2 mb-0">~@estimatedWait</h4>
                                    <small class="text-muted">Minutes Wait</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="bi bi-speedometer2 text-info" style="font-size: 2rem;"></i>
                                    <h4 class="mt-2 mb-0">@Model.EstimatedWaitTimePerPerson</h4>
                                    <small class="text-muted">Min/Person</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="bi bi-diagram-3 text-success" style="font-size: 2rem;"></i>
                                    <h4 class="mt-2 mb-0">@Model.MaxCapacity</h4>
                                    <small class="text-muted">Max Capacity</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Bar -->
                    <div class="mb-4">
                        <label class="form-label">Queue Capacity</label>
                        <div class="progress" style="height: 25px;">
                            @{
                                var percentage = Model.MaxCapacity > 0 ? (currentSize * 100 / Model.MaxCapacity) : 0;
                                var progressClass = percentage >= 90 ? "bg-danger" : percentage >= 70 ? "bg-warning" : "bg-success";
                            }
                            <div class="progress-bar @progressClass" 
                                 role="progressbar" 
                                 style="width: @percentage%;" 
                                 aria-valuenow="@currentSize" 
                                 aria-valuemin="0" 
                                 aria-valuemax="@Model.MaxCapacity">
                                @currentSize / @Model.MaxCapacity (@percentage.ToString("F0")%)
                            </div>
                        </div>
                    </div>

                    <!-- Queue Manager Info -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-building"></i> Queue Manager
                            </h6>
                            <p class="mb-1">
                                <strong>@Model.User.FirstName @Model.User.LastName</strong>
                            </p>
                            @if (!string.IsNullOrEmpty(Model.User.Email))
                            {
                                <p class="mb-0 text-muted small">
                                    <i class="bi bi-envelope"></i> @Model.User.Email
                                </p>
                            }
                        </div>
                    </div>

                    <!-- Join Queue Button -->
                    <div class="d-grid gap-2">
                        @if (isFull)
                        {
                            <button class="btn btn-lg btn-secondary" disabled>
                                <i class="bi bi-x-circle"></i> Queue is Full
                            </button>
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-triangle"></i> 
                                This queue has reached its maximum capacity. Please check back later or search for other available queues.
                            </div>
                        }
                        else if (Model.Status == "Paused")
                        {
                            <button class="btn btn-lg btn-warning" disabled>
                                <i class="bi bi-pause-circle"></i> Queue is Paused
                            </button>
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> 
                                This queue is temporarily paused. Please check back later.
                            </div>
                        }
                        else
                        {
                            <a href="@joinUrl" class="btn btn-lg btn-success">
                                <i class="bi bi-person-plus"></i> Join This Queue
                            </a>
                            <small class="text-muted text-center">
                                Click to join and receive real-time updates on your position
                            </small>
                        }
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-6">
                            <small>
                                <i class="bi bi-calendar3"></i> Created: @Model.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                        <div class="col-6 text-end">
                            <small>
                                <i class="bi bi-arrow-clockwise"></i> Updated: @Model.UpdatedAt.ToString("MMM dd, h:mm tt")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="text-center">
                <a asp-action="Results" asp-route-searchQuery="@ViewBag.SearchQuery" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Results
                </a>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
