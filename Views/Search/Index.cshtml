@{
    ViewData["Title"] = "Search Queues";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-search"></i> Search for Queues
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Search for available queues by name or description. Find queues near you and join them instantly!
                    </p>

                    <form asp-action="Results" method="get" class="mb-4">
                        <div class="input-group input-group-lg">
                            <input type="text" 
                                   name="searchQuery" 
                                   class="form-control" 
                                   placeholder="Enter queue name or keywords..." 
                                   required
                                   autofocus>
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                        <small class="form-text text-muted mt-2">
                            Try searching for "coffee", "restaurant", "service", etc.
                        </small>
                    </form>

                    <hr class="my-4">

                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-search text-primary" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Search</h5>
                                <p class="small text-muted">Find queues by name or description</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-info-circle text-primary" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">View Details</h5>
                                <p class="small text-muted">Check wait times and queue information</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-person-plus text-primary" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Join Queue</h5>
                                <p class="small text-muted">Join instantly and track your position</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="bi bi-lightbulb"></i> 
                    <strong>Tip:</strong> You can also join queues by scanning QR codes at participating locations!
                </p>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
