@{
    ViewData["Title"] = "Your Queue Position";
    var queueEntry = ViewBag.QueueEntry as HiveQ.Models.QueueEntry;
    var isServed = queueEntry?.Status == "Served" || queueEntry?.Status == "Cancelled" || queueEntry?.Status == "NoShow";
}

@if (isServed)
{
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-success mt-5">
                <div class="card-header bg-success text-white text-center py-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill mb-3" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                    <h2 class="mb-0">You've Been Served!</h2>
                </div>
                <div class="card-body text-center py-5">
                    <h4 class="mb-4">Thank you for using @queueEntry?.Queue.QueueName</h4>
                    <p class="lead text-muted mb-4">Your service has been completed.</p>
                    
                    @if (queueEntry?.Status == "Served")
                    {
                        <div class="alert alert-success">
                            <strong>Served at:</strong> @queueEntry.ServedAt?.ToLocalTime().ToString("h:mm tt")
                        </div>
                    }
                    else if (queueEntry?.Status == "Cancelled")
                    {
                        <div class="alert alert-warning">
                            <strong>Status:</strong> Your queue entry was cancelled
                        </div>
                    }
                    else if (queueEntry?.Status == "NoShow")
                    {
                        <div class="alert alert-danger">
                            <strong>Status:</strong> Marked as no-show
                        </div>
                    }
                    
                    <hr class="my-4" />
                    
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z"/>
                            </svg>
                            Browse Other Queues
                        </a>
                        <a asp-controller="JoinQueue" asp-action="MyQueues" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-ul" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                            </svg>
                            View My Other Queues
                        </a>
                    </div>
                    
                    <div class="mt-4">
                        <small class="text-muted">Queue: @queueEntry?.Queue.QueueName</small><br/>
                        <small class="text-muted">Joined: @queueEntry?.JoinedAt.ToLocalTime().ToString("MMM dd, h:mm tt")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="text-center mb-4">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
            </div>

            <h1>You're in the Queue!</h1>
            <h3 class="text-primary">@queueEntry?.Queue.QueueName</h3>
        </div>

        <div class="card mb-4">
            <div class="card-body text-center">
                <h6 class="text-muted mb-2">Your Position</h6>
                <h1 class="display-1 text-primary mb-0">@ViewBag.CurrentPosition</h1>
                
                @if (ViewBag.PeopleAhead > 0)
                {
                    <p class="text-muted mt-3">
                        <strong>@ViewBag.PeopleAhead</strong> people ahead of you
                    </p>
                }
                else
                {
                    <p class="text-success mt-3">
                        <strong>You're next!</strong>
                    </p>
                }

                <hr />

                <div class="row">
                    <div class="col-6">
                        <small class="text-muted d-block">Estimated Wait</small>
                        <h3 class="text-primary">~@ViewBag.EstimatedWait min</h3>
                    </div>
                    <div class="col-6">
                        <small class="text-muted d-block">Status</small>
                        <h3>
                            @if (queueEntry?.Status == "Waiting")
                            {
                                <span class="badge bg-info">Waiting</span>
                            }
                            else if (queueEntry?.Status == "Notified")
                            {
                                <span class="badge bg-warning">Your Turn!</span>
                            }
                            else if (queueEntry?.Status == "Served")
                            {
                                <span class="badge bg-success">Served</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@queueEntry?.Status</span>
                            }
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <h6 class="card-title">Your Information</h6>
                <p class="mb-1"><strong>Name:</strong> @queueEntry?.User.FirstName @queueEntry?.User.LastName</p>
                @if (!string.IsNullOrEmpty(queueEntry?.User.Email) && !queueEntry.User.Email.Contains("@hiveq.local"))
                {
                    <p class="mb-1"><strong>Email:</strong> @queueEntry.User.Email</p>
                }
                @if (!string.IsNullOrEmpty(queueEntry?.User.PhoneNumber))
                {
                    <p class="mb-1"><strong>Phone:</strong> @queueEntry.User.PhoneNumber</p>
                }
                <p class="mb-0"><strong>Notifications:</strong> @queueEntry?.NotificationPreference</p>
            </div>
        </div>

        <div class="alert alert-info">
            <h6 class="alert-heading">Important Information</h6>
            <ul class="mb-0">
                <li>Keep this page open or bookmark it to check your position</li>
                <li>You'll be notified when it's almost your turn (if enabled)</li>
                <li>Please arrive promptly when notified</li>
            </ul>
        </div>

        @if (queueEntry?.Status == "Notified")
        {
            <div class="alert alert-warning border-warning mb-3">
                <h4 class="alert-heading">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                        <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z"/>
                    </svg>
                    It's Your Turn!
                </h4>
                <p class="mb-0">Please proceed to the counter/service area now.</p>
            </div>
            
            <div class="d-grid gap-2 mb-3">
                <form method="post" asp-controller="JoinQueue" asp-action="MarkArrived" asp-route-queueEntryId="@queueEntry.QueueEntryId">
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                        I'm Attending Now
                    </button>
                </form>
            </div>
        }

        <div class="d-grid gap-2">
            <button type="button" class="btn btn-primary" onclick="location.reload()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                </svg>
                Refresh Position
            </button>
            
            <form method="post" asp-controller="JoinQueue" asp-action="Leave" asp-route-queueEntryId="@queueEntry?.QueueEntryId" 
                  onsubmit="return confirm('Are you sure you want to leave the queue?');">
                <button type="submit" class="btn btn-outline-danger w-100">Leave Queue</button>
            </form>
        </div>

        <div class="text-center mt-3">
            <small class="text-muted">
                Queue Entry ID: @queueEntry?.QueueEntryId | 
                Joined at @queueEntry?.JoinedAt.ToLocalTime().ToString("h:mm tt")
            </small>
        </div>
    </div>
</div>
}

<script>
    // Auto-refresh every 30 seconds to update position (only if not served)
    @if (!isServed)
    {
        <text>
        setTimeout(function() {
            location.reload();
        }, 30000);
        </text>
    }
</script>
