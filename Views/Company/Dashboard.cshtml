@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Company Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <h1>Company Dashboard</h1>
        <p class="lead">Manage your queues and monitor customer flow</p>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Active Queues</h5>
                <p class="display-4">3</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Waiting</h5>
                <p class="display-4">25</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Served Today</h5>
                <p class="display-4">47</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Avg. Wait Time</h5>
                <p class="display-4">28m</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Your Queues</h3>
            <a asp-controller="Company" asp-action="CreateQueue" class="btn btn-primary">
                Create New Queue
            </a>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="mb-0">Main Dining Queue</h5>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="badge bg-success">Open</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <p><strong>Current Wait:</strong> 12 people</p>
                        <p><strong>Est. Time:</strong> 45 minutes</p>
                    </div>
                    <div class="col-md-3">
                        <p><strong>Served Today:</strong> 28</p>
                        <p><strong>Avg. Time:</strong> 5 min/person</p>
                    </div>
                    <div class="col-md-3">
                        <p><strong>Created:</strong> Nov 1, 2024</p>
                        <p><strong>Last Active:</strong> 2 min ago</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <a href="#" class="btn btn-primary btn-sm mb-1">Manage Queue</a><br />
                        <a href="#" class="btn btn-secondary btn-sm mb-1">View QR Code</a><br />
                        <button class="btn btn-warning btn-sm">Pause Queue</button>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 20px;">
                    <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
                        12 / 20 capacity
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="mb-0">Takeout Line</h5>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="badge bg-success">Open</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <p><strong>Current Wait:</strong> 8 people</p>
                        <p><strong>Est. Time:</strong> 20 minutes</p>
                    </div>
                    <div class="col-md-3">
                        <p><strong>Served Today:</strong> 15</p>
                        <p><strong>Avg. Time:</strong> 3 min/person</p>
                    </div>
                    <div class="col-md-3">
                        <p><strong>Created:</strong> Nov 1, 2024</p>
                        <p><strong>Last Active:</strong> 1 min ago</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <a href="#" class="btn btn-primary btn-sm mb-1">Manage Queue</a><br />
                        <a href="#" class="btn btn-secondary btn-sm mb-1">View QR Code</a><br />
                        <button class="btn btn-warning btn-sm">Pause Queue</button>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 20px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 53%;" aria-valuenow="53" aria-valuemin="0" aria-valuemax="100">
                        8 / 15 capacity
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="mb-0">VIP Reservations</h5>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="badge bg-secondary">Paused</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <p><strong>Current Wait:</strong> 5 people</p>
                        <p><strong>Est. Time:</strong> 15 minutes</p>
                    </div>
                    <div class="col-md-3">
                        <p><strong>Served Today:</strong> 4</p>
                        <p><strong>Avg. Time:</strong> 10 min/person</p>
                    </div>
                    <div class="col-md-3">
                        <p><strong>Created:</strong> Oct 28, 2024</p>
                        <p><strong>Last Active:</strong> 15 min ago</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <a href="#" class="btn btn-primary btn-sm mb-1">Manage Queue</a><br />
                        <a href="#" class="btn btn-secondary btn-sm mb-1">View QR Code</a><br />
                        <button class="btn btn-success btn-sm">Resume Queue</button>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 20px;">
                    <div class="progress-bar bg-secondary" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                        5 / 10 capacity
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h3>Recent Activity</h3>
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Queue</th>
                    <th>Customer</th>
                    <th>Action</th>
                    <th>Wait Time</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1:45 PM</td>
                    <td>Main Dining</td>
                    <td>John Doe</td>
                    <td><span class="badge bg-success">Served</span></td>
                    <td>42 min</td>
                </tr>
                <tr>
                    <td>1:40 PM</td>
                    <td>Takeout Line</td>
                    <td>Jane Smith</td>
                    <td><span class="badge bg-success">Served</span></td>
                    <td>18 min</td>
                </tr>
                <tr>
                    <td>1:38 PM</td>
                    <td>Main Dining</td>
                    <td>Bob Johnson</td>
                    <td><span class="badge bg-primary">Joined</span></td>
                    <td>-</td>
                </tr>
                <tr>
                    <td>1:35 PM</td>
                    <td>VIP Reservations</td>
                    <td>Alice Brown</td>
                    <td><span class="badge bg-warning">Left Queue</span></td>
                    <td>-</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
