@model dynamic

@{
    ViewData["Title"] = "Queue Details";
}

<div class="row">
    <div class="col-md-8">
        <h1>Joe's Pizza - Main Dining Queue</h1>
        <p class="lead">Best pizza in town!</p>
        
        <div class="card mt-4">
            <div class="card-header">
                <h4>Queue Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Company:</strong> Joe's Pizza</p>
                        <p><strong>Category:</strong> Restaurant</p>
                        <p><strong>Address:</strong> 123 Main Street</p>
                        <p><strong>Phone:</strong> (555) 123-4567</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Queue Status:</strong> <span class="badge bg-success">Open</span></p>
                        <p><strong>People in Queue:</strong> 12</p>
                        <p><strong>Estimated Wait Time:</strong> 45 minutes</p>
                        <p><strong>Avg. Time per Person:</strong> 5 minutes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5>Join This Queue</h5>
                <p>Enter your contact information to join the queue remotely. You'll receive notifications about your position.</p>
                
                <form method="post" asp-controller="Queue" asp-action="Join">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number (Optional)</label>
                        <input type="tel" class="form-control" id="phone" name="phone" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notification Preference</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="notificationPref" id="emailOnly" value="Email" checked />
                            <label class="form-check-label" for="emailOnly">
                                Email Only
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="notificationPref" id="smsOnly" value="SMS" />
                            <label class="form-check-label" for="smsOnly">
                                SMS Only
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="notificationPref" id="both" value="Both" />
                            <label class="form-check-label" for="both">
                                Both Email and SMS
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Join Queue</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Scan QR Code</h5>
            </div>
            <div class="card-body text-center">
                <div style="background-color: #f0f0f0; padding: 40px; margin: 20px 0;">
                    <p class="text-muted">[QR Code Placeholder]</p>
                    <p class="text-muted">Scan with your phone</p>
                </div>
                <p class="small">Scan this QR code with your phone to join the queue instantly!</p>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <h6>What happens next?</h6>
            <ul class="small">
                <li>You'll receive a confirmation</li>
                <li>We'll notify you as the queue moves</li>
                <li>You'll get an alert when you're next</li>
                <li>You can leave the queue anytime</li>
            </ul>
        </div>
    </div>
</div>
