@model dynamic

@{
    ViewData["Title"] = "Your Queue Position";
}

<div class="row">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Queue" asp-action="MyQueues">My Queues</a></li>
                <li class="breadcrumb-item active" aria-current="page">Queue Position</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Joe's Pizza - Main Dining</h1>
        <p class="lead">You're in line! Track your position below.</p>

        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Your Position</h3>
            </div>
            <div class="card-body text-center">
                <div class="display-1 text-primary">#8</div>
                <p class="lead">in the queue</p>
                
                <div class="row mt-4">
                    <div class="col-md-4">
                        <h5>People Ahead</h5>
                        <p class="display-6">7</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Total in Queue</h5>
                        <p class="display-6">12</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Est. Wait Time</h5>
                        <p class="display-6">35 min</p>
                    </div>
                </div>

                <div class="progress mt-4" style="height: 30px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" 
                         role="progressbar" 
                         style="width: 33%;" 
                         aria-valuenow="33" 
                         aria-valuemin="0" 
                         aria-valuemax="100">
                        33% Complete
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5>Queue Details</h5>
            </div>
            <div class="card-body">
                <p><strong>Joined at:</strong> Nov 8, 2024 - 12:45 PM</p>
                <p><strong>Queue Status:</strong> <span class="badge bg-success">Active</span></p>
                <p><strong>Your Status:</strong> <span class="badge bg-primary">Waiting</span></p>
                <p><strong>Notification Preference:</strong> Email and SMS</p>
                <p><strong>Contact:</strong> john.doe@email.com | (555) 123-4567</p>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5>Queue Activity</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <span class="badge bg-success">12:45 PM</span> You joined the queue at position #8
                    </li>
                    <li class="list-group-item">
                        <span class="badge bg-info">12:50 PM</span> Queue moved - now at position #8 (no change)
                    </li>
                    <li class="list-group-item">
                        <span class="badge bg-info">12:55 PM</span> 2 people left the queue
                    </li>
                    <li class="list-group-item">
                        <span class="badge bg-warning">1:00 PM</span> Your position updated to #6
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Actions</h5>
            </div>
            <div class="card-body">
                <button class="btn btn-primary btn-block w-100 mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                        <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                    </svg>
                    Refresh Position
                </button>
                
                <button class="btn btn-outline-secondary btn-block w-100 mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                        <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"/>
                    </svg>
                    Test Notification
                </button>
                
                <hr />
                
                <button class="btn btn-danger btn-block w-100">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    Leave Queue
                </button>
            </div>
        </div>

        <div class="alert alert-warning mt-3">
            <h6>Important!</h6>
            <p class="small mb-0">Please arrive at the location when you're in the top 3 positions. You'll receive a notification.</p>
        </div>

        <div class="alert alert-info mt-3">
            <h6>Real-Time Updates</h6>
            <p class="small mb-0">This page automatically refreshes every 30 seconds to show your latest position.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds (for demonstration)
        // setTimeout(function() {
        //     location.reload();
        // }, 30000);
        
        console.log('Queue position page loaded - auto-refresh disabled for prototype');
    </script>
}
