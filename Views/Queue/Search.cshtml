@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Search Queues";
}

<h1>Search for Queues</h1>

<div class="row mt-4">
    <div class="col-md-12">
        <form method="get" asp-controller="Queue" asp-action="Search">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="searchQuery" placeholder="Search for a company or queue..." aria-label="Search" />
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h3>Search Results</h3>
        <p class="text-muted">Enter a company name to search</p>
    </div>
</div>

