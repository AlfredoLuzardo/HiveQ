@model dynamic

@{
    ViewData["Title"] = "Edit Queue";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="ManageQueues" asp-action="Index">Manage Queues</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Queue</li>
            </ol>
        </nav>

        <h1>Edit Queue</h1>
        <p class="lead">Update your queue settings</p>

        <div class="card mt-4">
            <div class="card-body">
                <form method="post" asp-controller="ManageQueues" asp-action="EditQueue" asp-route-id="1">
                    <h4>Queue Information</h4>
                    <hr />

                    <div class="mb-3">
                        <label for="queueName" class="form-label">Queue Name *</label>
                        <input type="text" class="form-control" id="queueName" name="queueName" value="Main Dining Queue" required />
                        <div class="form-text">Give your queue a descriptive name</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3">Our main dining area queue for dine-in customers</textarea>
                    </div>

                    <h4 class="mt-4">Queue Settings</h4>
                    <hr />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="maxCapacity" class="form-label">Maximum Capacity</label>
                            <input type="number" class="form-control" id="maxCapacity" name="maxCapacity" value="20" />
                            <div class="form-text">Max number of people allowed in queue (optional)</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="estimatedTime" class="form-label">Estimated Time Per Person (minutes) *</label>
                            <input type="number" class="form-control" id="estimatedTime" name="estimatedTime" value="5" required />
                            <div class="form-text">Average time to serve one customer</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">Queue Status</label>
                        <select class="form-select" id="status" name="status">
                            <option value="Open" selected>Open - Accepting customers</option>
                            <option value="Paused">Paused - Not accepting new customers</option>
                            <option value="Closed">Closed - Queue is closed</option>
                        </select>
                    </div>

                    <h4 class="mt-4">Notification Settings</h4>
                    <hr />

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="emailNotifications" name="emailNotifications" checked />
                        <label class="form-check-label" for="emailNotifications">
                            Send email notifications to customers
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="smsNotifications" name="smsNotifications" />
                        <label class="form-check-label" for="smsNotifications">
                            Send SMS notifications (requires SMS credits)
                        </label>
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-controller="ManageQueues" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
