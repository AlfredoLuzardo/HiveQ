@model IEnumerable<HiveQ.Models.Queue>

@{
    ViewData["Title"] = "Manage Queues";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Manage Queues</h1>
                <p class="lead mb-0">View and manage all your queues</p>
            </div>
            <div>
                <a asp-controller="CreateQueue" asp-action="Index" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                    Create New Queue
                </a>
            </div>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Queue List -->
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var queue in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">@queue.QueueName</h5>
                                @if (queue.Status == "Open")
                                {
                                    <span class="badge bg-success">Open</span>
                                }
                                else if (queue.Status == "Paused")
                                {
                                    <span class="badge bg-warning text-dark">Paused</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@queue.Status</span>
                                }
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(queue.Description))
                                {
                                    <p class="text-muted small">@queue.Description</p>
                                }
                                
                                <div class="row text-center mb-3">
                                    <div class="col-4">
                                        <h4 class="text-primary">@queue.CurrentQueueSize</h4>
                                        <small class="text-muted">In Queue</small>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="text-success">@queue.TotalServedToday</h4>
                                        <small class="text-muted">Served Today</small>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="text-warning">@(queue.CurrentQueueSize * queue.EstimatedWaitTimePerPerson)m</h4>
                                        <small class="text-muted">Est. Wait</small>
                                    </div>
                                </div>

                                <!-- QR Code and Link Section -->
                                <div class="border rounded p-3 mb-3 bg-light">
                                    <h6 class="mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-qr-code" viewBox="0 0 16 16">
                                            <path d="M2 2h2v2H2V2Z"/>
                                            <path d="M6 0v6H0V0h6ZM5 1H1v4h4V1ZM4 12H2v2h2v-2Z"/>
                                            <path d="M6 10v6H0v-6h6Zm-5 1v4h4v-4H1Zm11-9h2v2h-2V2Z"/>
                                            <path d="M10 0v6h6V0h-6Zm5 1v4h-4V1h4ZM8 1V0h1v2H8v2H7V1h1Zm0 5V4h1v2H8ZM6 8V7h1V6h1v2h1V7h5v1h-4v1H7V8H6Zm0 0v1H2V8H1v1H0V7h3v1h3Zm10 1h-1V7h1v2Zm-1 0h-1v2h2v-1h-1V9Zm-4 0h2v1h-1v1h-1V9Zm2 3v-1h-1v1h-1v1H9v1h3v-2h1Zm0 0h3v1h-2v1h-1v-2Zm-4-1v1h1v-2H7v1h2Z"/>
                                            <path d="M7 12h1v3h4v1H7v-4Zm9 2v2h-3v-1h2v-1h1Z"/>
                                        </svg>
                                        Customer Join Options
                                    </h6>
                                    
                                    @{
                                        var qrCodes = ViewBag.QueueQRCodes as Dictionary<int, string>;
                                        var joinUrl = $"{Context.Request.Scheme}://{Context.Request.Host}/JoinQueue?code={queue.QRCodeData}";
                                    }
                                    
                                    <div class="row">
                                        <div class="col-md-6 text-center">
                                            @if (qrCodes != null && qrCodes.ContainsKey(queue.QueueId))
                                            {
                                                <img src="@qrCodes[queue.QueueId]" alt="QR Code" class="img-fluid mb-2" style="max-width: 150px;" />
                                                <p class="small text-muted mb-0">Scan to Join</p>
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block mb-1">Share Link:</small>
                                            <div class="input-group input-group-sm">
                                                <input type="text" class="form-control" id="link-@queue.QueueId" value="@joinUrl" readonly />
                                                <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('@queue.QueueId')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="d-grid gap-2">
                                    <a asp-controller="ManageQueues" asp-action="Details" asp-route-id="@queue.QueueId" class="btn btn-primary">
                                        View Queue Details
                                    </a>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="ManageQueues" asp-action="EditQueue" asp-route-id="@queue.QueueId" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" asp-controller="ManageQueues" asp-action="DeleteQueue" asp-route-id="@queue.QueueId" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this queue?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center mt-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-inbox text-muted" viewBox="0 0 16 16">
                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438L14.933 9zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .106.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z"/>
                </svg>
                <h3 class="mt-3">No Queues Yet</h3>
                <p class="text-muted">Create your first queue to get started</p>
                <a asp-controller="CreateQueue" asp-action="Index" class="btn btn-primary mt-2">Create Queue</a>
            </div>
        }
    </div>
</div>

<script>
    // Copy link to clipboard
    function copyToClipboard(queueId) {
        const linkInput = document.getElementById('link-' + queueId);
        linkInput.select();
        linkInput.setSelectionRange(0, 99999); // For mobile devices
        
        navigator.clipboard.writeText(linkInput.value).then(function() {
            // Show success feedback
            const button = event.target.closest('button');
            const originalHTML = button.innerHTML;
            button.innerHTML = '<span class="text-success">âœ“ Copied!</span>';
            
            setTimeout(function() {
                button.innerHTML = originalHTML;
            }, 2000);
        }).catch(function(err) {
            alert('Failed to copy: ' + err);
        });
    }

    // Auto-refresh every 15 seconds
    setTimeout(function() {
        location.reload();
    }, 15000);
</script>
