@model dynamic

@{
    ViewData["Title"] = "Manage Queues";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Manage Queues</h1>
                <p class="lead mb-0">View and manage all your queues</p>
            </div>
            <div>
                <a asp-controller="CreateQueue" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Queue
                </a>
            </div>
        </div>

        <!-- Queue List -->
        <div class="row">
            <!-- Sample Queue Card 1 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Main Dining Queue</h5>
                        <span class="badge bg-success">Open</span>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <h4 class="text-primary">12</h4>
                                <small class="text-muted">In Queue</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-success">28</h4>
                                <small class="text-muted">Served Today</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-warning">45m</h4>
                                <small class="text-muted">Avg. Wait</small>
                            </div>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <a asp-controller="ManageQueues" asp-action="EditQueue" asp-route-id="1" class="btn btn-sm btn-outline-primary">Edit</a>
                            <form method="post" asp-controller="ManageQueues" asp-action="DeleteQueue" asp-route-id="1" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this queue?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sample Queue Card 2 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Takeout Line</h5>
                        <span class="badge bg-warning text-dark">Paused</span>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <h4 class="text-primary">5</h4>
                                <small class="text-muted">In Queue</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-success">15</h4>
                                <small class="text-muted">Served Today</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-warning">20m</h4>
                                <small class="text-muted">Avg. Wait</small>
                            </div>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <a asp-controller="ManageQueues" asp-action="EditQueue" asp-route-id="2" class="btn btn-sm btn-outline-primary">Edit</a>
                            <form method="post" asp-controller="ManageQueues" asp-action="DeleteQueue" asp-route-id="2" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this queue?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

