@model HiveQ.Models.Queue

@{
    ViewData["Title"] = "Queue Details";
    var queueEntries = ViewBag.QueueEntries as List<HiveQ.Models.QueueEntry>;
}

<div class="row">
    <div class="col-md-12">
        <div class="mb-4">
            <a asp-controller="ManageQueues" asp-action="Index" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
                Back to Queues
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">@Model.QueueName</h2>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted mb-0">@Model.Description</p>
                    }
                </div>
                @if (Model.Status == "Open")
                {
                    <span class="badge bg-success fs-5">Open</span>
                }
                else if (Model.Status == "Paused")
                {
                    <span class="badge bg-warning text-dark fs-5">Paused</span>
                }
                else
                {
                    <span class="badge bg-secondary fs-5">@Model.Status</span>
                }
            </div>
            <div class="card-body">
                <div class="row text-center mb-3">
                    <div class="col-3">
                        <h3 class="text-primary">@Model.CurrentQueueSize</h3>
                        <small class="text-muted">In Queue</small>
                    </div>
                    <div class="col-3">
                        <h3 class="text-success">@Model.TotalServedToday</h3>
                        <small class="text-muted">Served Today</small>
                    </div>
                    <div class="col-3">
                        <h3 class="text-info">@Model.MaxCapacity</h3>
                        <small class="text-muted">Max Capacity</small>
                    </div>
                    <div class="col-3">
                        <h3 class="text-warning">~@Model.EstimatedWaitTimePerPerson min</h3>
                        <small class="text-muted">Per Person</small>
                    </div>
                </div>
                <hr />
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-primary" id="callNextBtn" onclick="callNext(@Model.QueueId)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-megaphone" viewBox="0 0 16 16">
                                <path d="M13 2.5a1.5 1.5 0 0 1 3 0v11a1.5 1.5 0 0 1-3 0v-.214c-2.162-1.241-4.49-1.843-6.912-2.083l.405 2.712A1 1 0 0 1 5.51 15.1h-.548a1 1 0 0 1-.916-.599l-1.85-3.49a68.14 68.14 0 0 0-.202-.003A2.014 2.014 0 0 1 0 9V7a2.02 2.02 0 0 1 1.992-2.013 74.663 74.663 0 0 0 2.483-.075c3.043-.154 6.148-.849 8.525-2.199V2.5zm1 0v11a.5.5 0 0 0 1 0v-11a.5.5 0 0 0-1 0zm-1 1.35c-2.344 1.205-5.209 1.842-8 2.033v4.233c.18.01.359.022.537.036 2.568.189 5.093.744 7.463 1.993V3.85zm-9 6.215v-4.13a95.09 95.09 0 0 1-1.992.052A1.02 1.02 0 0 0 1 7v2c0 .55.448 1.002 1.006 1.009A60.49 60.49 0 0 1 4 10.065zm-.657.975 1.609 3.037.01.024h.548l-.002-.014-.443-2.966a68.019 68.019 0 0 0-1.722-.082z"/>
                            </svg>
                            Call Next Customer
                        </button>
                    </div>
                    <div>
                        <a asp-controller="ManageQueues" asp-action="EditQueue" asp-route-id="@Model.QueueId" class="btn btn-outline-primary">
                            Edit Queue
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Queue Positions</h4>
            </div>
            <div class="card-body">
                @if (queueEntries != null && queueEntries.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Position</th>
                                    <th>Name</th>
                                    <th>Party Size</th>
                                    <th>Contact</th>
                                    <th>Joined At</th>
                                    <th>Status</th>
                                    <th>Wait Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="queueTableBody">
                                @foreach (var entry in queueEntries)
                                {
                                    <tr class="@(entry.Status == "Notified" ? "table-warning" : "")" id="entry-@entry.QueueEntryId">
                                        <td>
                                            <strong class="fs-5">
                                                @if (entry.PositionNumber == queueEntries.Min(qe => qe.PositionNumber) && entry.Status == "Notified")
                                                {
                                                    <span class="badge bg-warning text-dark">NEXT</span>
                                                }
                                                else
                                                {
                                                    @entry.PositionNumber
                                                }
                                            </strong>
                                        </td>
                                        <td>@entry.User.FirstName @entry.User.LastName</td>
                                        <td>
                                            <span class="badge bg-secondary">@entry.PartySize</span>
                                            <small class="text-muted">@(entry.PartySize == 1 ? "person" : "people")</small>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(entry.User.Email) && !entry.User.Email.Contains("@hiveq.local"))
                                            {
                                                <small>@entry.User.Email</small>
                                            }
                                            @if (!string.IsNullOrEmpty(entry.User.PhoneNumber))
                                            {
                                                <br /><small>@entry.User.PhoneNumber</small>
                                            }
                                            @if (string.IsNullOrEmpty(entry.User.Email) || entry.User.Email.Contains("@hiveq.local"))
                                            {
                                                <small class="text-muted">Guest</small>
                                            }
                                        </td>
                                        <td>
                                            <small>@entry.JoinedAt.ToLocalTime().ToString("h:mm tt")</small>
                                        </td>
                                        <td>
                                            @if (entry.Status == "Waiting")
                                            {
                                                <span class="badge bg-info">Waiting</span>
                                            }
                                            else if (entry.Status == "Notified")
                                            {
                                                <span class="badge bg-warning text-dark">Notified</span>
                                                @if (entry.Notes != null && entry.Notes.Contains("Customer arrived"))
                                                {
                                                    <br /><small class="badge bg-success mt-1">Arrived âœ“</small>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <small>~@entry.EstimatedWaitTime min</small>
                                        </td>
                                        <td>
                                            @if (entry.Status == "Notified")
                                            {
                                                <button class="btn btn-sm btn-success mark-served-btn" onclick="markServed(@entry.QueueEntryId)">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                                    </svg>
                                                    Mark Served
                                                </button>
                                            }
                                            else
                                            {
                                                <small class="text-muted">-</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-people text-muted" viewBox="0 0 16 16">
                            <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z"/>
                        </svg>
                        <h5 class="mt-3 text-muted">No one in queue</h5>
                        <p class="text-muted">Customers will appear here when they join</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function callNext(queueId) {
        if (!confirm('Call the next customer in line?')) return;

        const btn = document.getElementById('callNextBtn');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Calling...';

        fetch('/ManageQueues/CallNext/' + queueId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert('Error: ' + data.message);
                btn.disabled = false;
                btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-megaphone" viewBox="0 0 16 16"><path d="M13 2.5a1.5 1.5 0 0 1 3 0v11a1.5 1.5 0 0 1-3 0v-.214c-2.162-1.241-4.49-1.843-6.912-2.083l.405 2.712A1 1 0 0 1 5.51 15.1h-.548a1 1 0 0 1-.916-.599l-1.85-3.49a68.14 68.14 0 0 0-.202-.003A2.014 2.014 0 0 1 0 9V7a2.02 2.02 0 0 1 1.992-2.013 74.663 74.663 0 0 0 2.483-.075c3.043-.154 6.148-.849 8.525-2.199V2.5zm1 0v11a.5.5 0 0 0 1 0v-11a.5.5 0 0 0-1 0zm-1 1.35c-2.344 1.205-5.209 1.842-8 2.033v4.233c.18.01.359.022.537.036 2.568.189 5.093.744 7.463 1.993V3.85zm-9 6.215v-4.13a95.09 95.09 0 0 1-1.992.052A1.02 1.02 0 0 0 1 7v2c0 .55.448 1.002 1.006 1.009A60.49 60.49 0 0 1 4 10.065zm-.657.975 1.609 3.037.01.024h.548l-.002-.014-.443-2.966a68.019 68.019 0 0 0-1.722-.082z"/></svg> Call Next Customer';
            }
        })
        .catch(error => {
            alert('An error occurred: ' + error);
            btn.disabled = false;
            btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-megaphone" viewBox="0 0 16 16"><path d="M13 2.5a1.5 1.5 0 0 1 3 0v11a1.5 1.5 0 0 1-3 0v-.214c-2.162-1.241-4.49-1.843-6.912-2.083l.405 2.712A1 1 0 0 1 5.51 15.1h-.548a1 1 0 0 1-.916-.599l-1.85-3.49a68.14 68.14 0 0 0-.202-.003A2.014 2.014 0 0 1 0 9V7a2.02 2.02 0 0 1 1.992-2.013 74.663 74.663 0 0 0 2.483-.075c3.043-.154 6.148-.849 8.525-2.199V2.5zm1 0v11a.5.5 0 0 0 1 0v-11a.5.5 0 0 0-1 0zm-1 1.35c-2.344 1.205-5.209 1.842-8 2.033v4.233c.18.01.359.022.537.036 2.568.189 5.093.744 7.463 1.993V3.85zm-9 6.215v-4.13a95.09 95.09 0 0 1-1.992.052A1.02 1.02 0 0 0 1 7v2c0 .55.448 1.002 1.006 1.009A60.49 60.49 0 0 1 4 10.065zm-.657.975 1.609 3.037.01.024h.548l-.002-.014-.443-2.966a68.019 68.019 0 0 0-1.722-.082z"/></svg> Call Next Customer';
        });
    }

    function markServed(queueEntryId) {
        if (!confirm('Mark this customer as served?')) return;

        // Get the row element and button
        const row = document.getElementById('entry-' + queueEntryId);
        const button = row.querySelector('.mark-served-btn');
        
        // Disable button and show loading state
        button.disabled = true;
        button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';

        fetch('/ManageQueues/MarkServed?queueEntryId=' + queueEntryId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Add fade-out animation
                row.style.transition = 'opacity 0.5s ease-out';
                row.style.opacity = '0';
                
                // Remove row after animation and reload to update stats
                setTimeout(function() {
                    row.remove();
                    
                    // Check if table is now empty
                    const tbody = document.getElementById('queueTableBody');
                    if (tbody.children.length === 0) {
                        location.reload();
                    } else {
                        // Reload after a short delay to update statistics
                        setTimeout(function() {
                            location.reload();
                        }, 500);
                    }
                }, 500);
            } else {
                alert('Error: ' + data.message);
                button.disabled = false;
                button.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/><path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/></svg> Mark Served';
            }
        })
        .catch(error => {
            alert('An error occurred: ' + error);
            button.disabled = false;
            button.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/><path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/></svg> Mark Served';
        });
    }

    // SignalR connection for real-time queue updates
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/queueHub")
        .withAutomaticReconnect()
        .build();

    const queueId = @Model.QueueId;

    connection.start().then(function () {
        console.log("SignalR Connected");
        // Subscribe to this specific queue
        connection.invoke("SubscribeToQueue", queueId).catch(function (err) {
            console.error(err.toString());
        });
    }).catch(function (err) {
        console.error(err.toString());
    });

    // Listen for queue updates
    connection.on("QueueUpdated", function (updatedQueueId) {
        if (updatedQueueId === queueId) {
            console.log("Queue updated: " + updatedQueueId);
            // Reload the page to get fresh data
            location.reload();
        }
    });

    // Clean up on page unload
    window.addEventListener('beforeunload', function() {
        connection.invoke("UnsubscribeFromQueue", queueId).catch(function (err) {
            console.error(err.toString());
        });
    });
</script>

